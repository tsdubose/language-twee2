'patterns': [
  #### Twee2 Patterns
  ## CSS Embedded Passages
  {
    "name": "source.embedded.css.twee2"
    "begin": "(^::)(.+)(\\[)(stylesheet)(\\])"
    "beginCaptures":
      "1": "name": "storage.type.twee2"
      "2": "name": "string.twee2"
      "3": "name": "comment.block.punctuation.definition.tag.begin.twee2"
