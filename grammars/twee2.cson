      "5": "name": "comment.block.punctuation.definition.tag.end.twee2"
    "end": "^(?=::)"
    "patterns": [
      { "include": "source.css" }
    ]
  },
  ## SASS Embedded Passages
  {
    "name": "source.embedded.sass.twee2"
    "begin": "(^::)(.+)(\\[)((sass\\s+)stylesheet)(\\])"
    "beginCaptures":
      "1": "name": "storage.type.twee2"
      "2": "name": "string.twee2"
